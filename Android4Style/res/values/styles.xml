<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Holo.ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_holo</item>
    </style>

    <style name="Widget.Holo.ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="Widget.Holo.ProgressBar.Small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small_holo</item>
    </style>

    <style name="Widget.Holo.ProgressBar.Large" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress_large_holo</item>
    </style>

 

    <style name="CheckBox_light">
        <item name="android:background">@drawable/btn_check_label_background</item>
        <item name="android:button">@drawable/btn_check_holo_light</item>
    </style>

    <style name="CheckBox_dark">
        <item name="android:background">@drawable/btn_check_label_background</item>
        <item name="android:button">@drawable/btn_check_holo_dark</item>
    </style>

    <style name="RadioButton_light">
        <item name="android:background">@drawable/btn_radio_label_background</item>
        <item name="android:button">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="RadioButton_dark">
        <item name="android:background">@drawable/btn_radio_label_background</item>
        <item name="android:button">@drawable/btn_radio_holo_dark</item>
    </style>

    <style name="numberpicker_light">
        <item name="android:background">@drawable/btn_check_label_background</item>
        <item name="android:button">@drawable/numberpicker_btn_holo_light</item>
    </style>

    <style name="numberpicker_dark">
        <item name="android:background">@drawable/btn_check_label_background</item>
        <item name="android:button">@drawable/numberpicker_btn_holo_dark</item>
    </style>
</resources>