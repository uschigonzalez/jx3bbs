<resources>

    <declare-styleable name="SlidingGroup">
        <attr name="defaultPostion" format="integer"></attr>
        <attr name="offset" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ViewFlow">
        <attr name="sidebuffer" format="integer" />
    </declare-styleable>
    <declare-styleable name="CircleFlowIndicator">
        <attr name="activeColor" format="color" />
        <attr name="inactiveColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="centered" format="boolean" />
        <attr name="fadeOut" format="integer" />
        <attr name="inactiveType">
            <flag name="stroke" value="0" />
            <flag name="fill" value="1" />
        </attr>
        <attr name="activeType">
            <flag name="stroke" value="0" />
            <flag name="fill" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="TitleFlowIndicator">
        <attr name="titlePadding" format="dimension" />
        <!-- Left/right padding of not active view titles. -->
        <attr name="clipPadding" format="dimension" />
        <attr name="selectedColor" format="color" />
        <attr name="selectedBold" format="boolean" />
        <attr name="selectedSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="footerLineHeight" format="dimension" />
        <attr name="footerColor" format="color" />
        <attr name="footerTriangleHeight" format="dimension" />
    </declare-styleable>
    <declare-styleable name="Workspace">

        <!-- The first screen the workspace should display. -->
        <attr format="integer" name="defaultScreen"/>
    </declare-styleable>
    <declare-styleable name="CellLayout">

        <!-- The width of a single cell -->
        <attr format="dimension" name="cellWidth"/>
        <!-- The height of a single cell -->
        <attr format="dimension" name="cellHeight"/>
        <!-- Padding to apply at the start of the long axis -->
        <attr format="dimension" name="longAxisStartPadding"/>
        <!-- Padding to apply at the end of the long axis -->
        <attr format="dimension" name="longAxisEndPadding"/>
        <!-- Padding to apply at the start of the short axis -->
        <attr format="dimension" name="shortAxisStartPadding"/>
        <!-- Padding to apply at the end of the short axis -->
        <attr format="dimension" name="shortAxisEndPadding"/>
        <!-- Number of cells on the short axis of the CellLayout -->
        <attr format="integer" name="shortAxisCells"/>
        <!-- Number of cells on the long axis of the CellLayout -->
        <attr format="integer" name="longAxisCells"/>
        <attr format="dimension" name="WidthGap"/>
        <attr format="dimension" name="HeightGap"/>
    </declare-styleable>
</resources>